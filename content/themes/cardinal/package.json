{
    "private": true,
    "license": "UNLICENSED",
    "devDependencies": {
        "gulpfile": "ssh://git@gitlab.rue-de-la-vieille.fr:10022/jerome/gulpfile.git#master"
    },
    "dependencies": {
        "bezier-easing": "gre/bezier-easing#^2.1",
        "fastdom": "wilsonpage/fastdom#^1.0",
        "focusable": "jkup/focusable#>=2.0",
        "fontfaceobserver": "bramstein/fontfaceobserver#>=2.0",
        "jquery": "jquery/jquery-dist#>=3.2",
        "mobile-detect": "hgoebl/mobile-detect.js",
        "objectFitPolyfill": "constancecchen/object-fit-polyfill#>=2.1",
        "tarteaucitronjs": "AmauriC/tarteaucitron.js#*",
        "web/bezier-easing": "gre/bezier-easing#^2.1",
        "web/fastdom": "wilsonpage/fastdom#^1.0",
        "web/focusable": "jkup/focusable#>=2.0",
        "web/fontfaceobserver": "bramstein/fontfaceobserver#>=2.0",
        "web/jquery": "jquery/jquery-dist#>=3.2",
        "web/mobile-detect": "hgoebl/mobile-detect.js",
        "web/objectFitPolyfill": "constancecchen/object-fit-polyfill#>=2.1",
        "web/tarteaucitron": "AmauriC/tarteaucitron.js#*"
    },
    "engines": {
        "node": ">= 6.14.3",
        "yarn": ">= 1.0.0"
    },
    "scripts": {
        "postinstall": "dir=/tmp/`date +%s`; mkdir $dir; git clone ssh://git@gitlab.rue-de-la-vieille.fr:10022/jerome/gulpfile.git $dir; rsync -a $dir/.git node_modules/gulpfile/; rm -rf $dir;"
    },
    "eslintConfig": {
        "env": {
            "es6": true,
            "browser": true,
            "node": true
        },
        "extends": [
            "eslint:recommended"
        ],
        "plugins": [
            "react"
        ],
        "rules": {
            "react/jsx-uses-react": "error",
            "react/jsx-uses-vars": "error",
            "no-undef": "warn",
            "no-unused-vars": "warn",
            "no-console": [
                "warn",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ]
        },
        "parserOptions": {
            "ecmaVersion": 6,
            "ecmaFeatures": {
                "jsx": true
            },
            "sourceType": "module"
        }
    },
    "babel": {
        "presets": [
            "env",
            "react"
        ],
        "plugins": [
            [
                "transform-react-jsx",
                {
                    "pragma": "wp.element.createElement"
                }
            ]
        ]
    }
}
